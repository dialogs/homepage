  <body>
    <div class="site__wrapper">
      <%- include('partials/header') %>

      <main class="page blog">
          <div class="container">
            <div class="blog__top-section">
              <div class="blog__main box-block">
                <div class="blog__main-image">
                  <!-- <img src="/assets/images/blog/blog1.png" alt=""> -->
